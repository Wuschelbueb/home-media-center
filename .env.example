# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git

# User and group IDs
PUID=1000
PGID=1000

# Plex claim token (get from https://www.plex.tv/claim/)
PLEX_CLAIM=claim-YOUR-TOKEN-HERE

# Plex server settings
PLEX_URL=http://YOUR-IP:32400
PLEX_TOKEN=YOUR-PLEX-TOKEN-HERE
ADVERTISE_IP=http://YOUR-IP:32400/

# Timezone
TZ=US/Eastern

# TMDb API Key (get from https://www.themoviedb.org/settings/api)
TMDB_API_KEY=YOUR-TMDB-API-KEY-HERE

# OMDb API Key (get from http://www.omdbapi.com/apikey.aspx)
OMDB_API_KEY=YOUR-OMDB-API-KEY-HERE

# MDBList API Key (get from https://mdblist.com/preferences/)
MDBLIST_API_KEY=YOUR-MDBLIST-API-KEY-HERE

# Kometa Config Secrets (used as <<name>> in config.yml; names must NOT contain underscores)
KOMETA_PLEXURL=http://YOUR-IP:32400
KOMETA_PLEXTOKEN=YOUR-PLEX-TOKEN-HERE
KOMETA_TMDBAPIKEY=YOUR-TMDB-API-KEY-HERE
KOMETA_OMDBAPIKEY=YOUR-OMDB-API-KEY-HERE
KOMETA_MDBLISTAPIKEY=YOUR-MDBLIST-API-KEY-HERE

